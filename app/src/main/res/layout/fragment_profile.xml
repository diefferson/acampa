<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/profile_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Diefferson"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/profile_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/profile_community"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Matiz"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/profile_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_community"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/label_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Idade"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_age"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="20 anos"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/label_age" />

                <TextView
                    android:id="@+id/label_baptized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="É batizado"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/label_age"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_baptized"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sim"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_age"
                    app:layout_constraintStart_toEndOf="@id/label_baptized" />

                <TextView
                    android:id="@+id/label_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="É crismado"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/label_baptized"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_confimed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sim"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_baptized"
                    app:layout_constraintStart_toEndOf="@id/label_confirmed" />

                <TextView
                    android:id="@+id/label_plays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toca um instrumento?"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/label_confirmed"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_plays"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sim, violao"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_confimed"
                    app:layout_constraintStart_toEndOf="@id/label_plays" />


                <TextView
                    android:id="@+id/label_sings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Canta?"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/label_plays"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_sings"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Sim"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_plays"
                    app:layout_constraintStart_toEndOf="@id/label_sings" />


                <TextView
                    android:id="@+id/label_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefone"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/label_sings"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="99999999"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_sings"
                    app:layout_constraintStart_toEndOf="@id/label_phone" />

                <TextView
                    android:id="@+id/label_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Endereço"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/label_phone"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rua Armelindo peruzo 34"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_phone"
                    app:layout_constraintStart_toEndOf="@id/label_phone" />

                <TextView
                    android:id="@+id/label_camp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fez qual acamp?"
                    android:paddingStart="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/label_address"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/profile_camp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Juvenil"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/profile_address"
                    app:layout_constraintStart_toEndOf="@id/label_camp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>
        
    </android.support.constraint.ConstraintLayout>

</ScrollView>
